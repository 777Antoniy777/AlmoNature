  body

    header.header.text-content
      .site-wrapper
        .header__wrapper.header__wrapper--first

          //- Social
          .header__social

            ul.header__social-list
              each item in headerSocial
                li.header__social-item
                  span= item.title
                  a(href=item.link)

          //- Settings
          .header__settings

            p Professional area
            a.header__settings-link.header__settings-link--store(href="#") Find a store
            a(href="#") Italy
            a.header__settings-link.header__settings-link--lang(href="#") EN

        //- Navigation
        .header__wrapper.header__wrapper--second
          nav.header__main-navigation

            img.header__logo(src="img/svg/Almo.svg" width="123" height="53" alt="Logo Almo Nature")

            ul.header__category-list
              each item in headerCat
                li.header__category-item
                  a(href=item.link)= item.title

    //- Introduction
    section.introduction.text-content
      .site-wrapper
        h1 Almo Nature shop

        .introduction__wrapper
        
          img.introduction__logo(src="img/svg/holistic.svg" width="264" height="70" alt="Logo Holistic")
          span Total care is easy
          p 
